alias ll='ls -l'
alias la='ls -A'
alias lal='la -l'
alias l='ls'

# never use vi. only vim.
alias vi='vim'

# allow to grep the history without having to pipe. Fuck, I'm lazy.
function h() {
    if [ -z "$1" ]
    then
        history
    else
        history | grep "$@"
    fi
}

# allow to grep listing without having to pipe. I said I'm lazy, didn't? 
function lg() {
	if [ -z "$1" ]
	then
		ls
	else
		ls | grep "$@"
	fi
}

# Did I tell you I'm lazy?
alias p='pwd'

# git utils 
alias git-remove-merged='git branch --merged | egrep -v "(^\*|master|develop)" | xargs git branch -d'

# thefuck
eval $(thefuck --alias)
